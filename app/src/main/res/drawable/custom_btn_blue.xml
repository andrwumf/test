<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#ff3234c5" />
             <gradient 
               	 android:angle="-90"   
                 android:startColor="#ff310ea1"
                 android:endColor="#ff3234c5"  />
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#ff2548a1" />
             <solid  android:color="#ff3234c5"/>
         </shape>
     </item>	
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#ff310ea1" />
             <gradient 
               	 android:angle="-90"   
                 android:startColor="#ff6d9aff"
                 android:endColor="#ff3234c5" />
         </shape>
     </item>
</selector>